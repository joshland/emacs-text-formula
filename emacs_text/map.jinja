{% set osmversion = osmversion[0] %}
{% endif %}

{% set map = {
    'CentOS': {
      'filename': "CentOS-%s" % osmversion,
      'release': osmversion,
      'site-start': '/usr/share/emacs/site-lisp/site-start.d/',
    },
    'Fedora': {
      'filename': "Fedora",
      'release': osmversion,
      'site-start': '/usr/share/emacs/site-lisp/site-start.d/',
      },
    'RedHat': {
      'filename': "Fedora",
      'release': osmversion,
      'site-start': '/usr/share/emacs/site-lisp/site-start.d/',
      },
    'Debian': {
      'filename': "Fedora",
      'release': osmversion,
      'site-start': '/usr/share/emacs/site-lisp/',
    },
} %}

